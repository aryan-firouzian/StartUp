<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <!-- The above 3 meta tags *must* come first in the head; any other head content must come *after* these tags -->
    <title>Nemesis</title>

    <!-- Bootstrap -->
    <link href="/bootstrap/css/bootstrap.min.css" rel="stylesheet">

    <!-- HTML5 shim and Respond.js for IE8 support of HTML5 elements and media queries -->
    <!-- WARNING: Respond.js doesn't work if you view the page via file:// -->
    <!--[if lt IE 9]>
      <script src="https://oss.maxcdn.com/html5shiv/3.7.2/html5shiv.min.js"></script>
      <script src="https://oss.maxcdn.com/respond/1.4.2/respond.min.js"></script>
    <![endif]-->

    <meta charset="utf-8"/>
    <link href="~/favicon.ico" rel="shortcut icon" type="image/x-icon"/>
    <meta name="viewport" content="width=device-width"/>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
<div class="container" style="margin: 0 auto">
    <div class="row" style="margin-top: 50px; font-family: ralewayregular">
        <nav class="navbar navbar-inverse navbar-fixed-top" role="navigation">
            <div class="container">
                <div class="navbar-header">
                    <button type="button" class="navbar-toggle" data-toggle="collapse"
                            data-target="#navigation-bar-table">
                        <span class="sr-only">Toggle navigation</span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                    </button>
                    <p class="site-title h1">@Html.ActionLink("your logo here", "Index", "Home")</p>
                </div>
                <div class="collapse navbar-collapse" id="navigation-bar-table">
                    <ul class="nav navbar-nav navbar-right h2">
                        <li>@Html.ActionLink("Home", "Index", "Home", new {style = "text-decoration:none;"})</li>
                        <li>@Html.ActionLink("About", "About", "Home", new {style = "text-decoration:none;"})</li>
                        <li>@Html.ActionLink("Contact", "Contact", "Home", new {style = "text-decoration:none;"})</li>
                        <li>
                            @Html.Partial("_LoginPartial")
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </div>
    <div class="row" style="font-family: ralewayregular">
        <div id="body" style="background: white">
            @RenderBody()
        </div>
    </div>
    <div class="row h6">
        <div class="col-lg-2 col-md-2 col-sm-4 col-xs-6">
            <ul>
                <li>Tags</li>
            </ul>
        </div>
        <div class="col-lg-2 col-md-2 col-sm-4 col-xs-6">
            <ul>
                <li>Company</li>
                <li>About Us</li>
                <li>Become a Vendor</li>
            </ul>
        </div>
        <div class="col-lg-2 col-md-2 col-sm-4 col-xs-6">
            <ul>
                <li>Customer Service</li>
                <li>Term of Use</li>
                <li>Privacy Policy</li>
                <li>Contact</li>
                <li>Affiliate</li>
            </ul>
        </div>
        <div class="col-lg-2 col-md-2 col-sm-4 col-xs-6">
            <ul>
                <li>Online Shopping</li>
                <li>Return Policy</li>
                <li>Shipment Tracking</li>
            </ul>
        </div>
        <div class="col-lg-4 col-md-4 col-sm-8 col-xs-12">
            <ul>
                <li>Follow Us on Facebook, Google, Twitter</li>
                <li>Subscribe to this Email Address</li>
            </ul>
        </div>
    </div>
    <div class="row">
        <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
            <p style="text-align: center">&copy; @DateTime.Now.Year - Some information about the copy rigth</p>
        </div>
    </div>
</div>

@Scripts.Render("~/bundles/jquery")
@RenderSection("scripts", required: false)
    
<!-- jQuery (necessary for Bootstrap's JavaScript plugins) -->
<script src="https://ajax.googleapis.com/ajax/libs/jquery/1.11.3/jquery.min.js"></script>
<!-- Include all compiled plugins (below), or include individual files as needed -->
<script src="/bootstrap/js/bootstrap.min.js"></script>
</body>
</html>
